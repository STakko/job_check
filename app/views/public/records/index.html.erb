<div class="container">
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= search_form_for @q, url: p_worker_search_path, local: true do |f| %>
          <%= f.label :worker_id_eq, '作業者' %>
          <%= f.collection_select :worker_id_eq, @workers, :id, :name , include_blank: '指定なし', class:"ml-3" %>
          <%= f.submit '作業者で検索', class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="form-group">
        <%= search_form_for @q, url: p_client_search_path, local: true do |f| %>
          <%= f.label :client_id_eq, '取引先' %>
          <%= f.collection_select :client_id_eq, @clients, :id, :name , include_blank: '指定なし', class: "ml-3" %>
          <%= f.submit '取引先で検索', class: "btn btn-primary" %>
      <% end %>
      </div>
      <%= link_to '新規登録', new_record_path, class:"btn btn-outline-info" %>
      <%= render 'index', records: Record.page(params[:page]).reverse_order.per(9) %>
    </div>
  </div>
</div>