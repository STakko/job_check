<td class="text-center">
  作業時間
</td>
<td class="text-center">
  <% if record.start_time == nil %>
    <%= form_with model:record, url:record_path(record), remote:true do |f| %>
      <%= f.hidden_field :record, value: record %>
      <%= f.hidden_field :start_time, value: Time.now %>
      <%= f.submit "作業開始", class:"btn btn-primary" %>
    <% end %>
  <% elsif record.start_time != nil && record.finish_time == nil %>
    <%= form_with model:record, url:record_path(record), remote:true do |f| %>
      <%= f.hidden_field :record, value: record %>
      <%= f.hidden_field :finish_time, value: Time.now %>
      <%= f.submit "終了する", class:"btn btn-danger" %>
    <% end %>
  <% else %>
    <%= ((record.finish_time - record.start_time).to_i / 3600.0).round(1) %>時間
  <% end %>
</td>