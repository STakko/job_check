<div class="container">
  <div class"row" style="height: 550px;">
    <div class="col-6 m-auto">
      <h2 class="mt-4">予定詳細</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>予定名</td>
            <td><%= @event.title %></td>
          </tr>
          <tr>
            <td>予定作業者</td>
            <td><%= @event.worker.name %></td>
          </tr>
          <tr>
            <td>内容</td>
            <td><%= @event.content %></td>
          </tr>
          <tr>
            <td>開始時刻</td>
            <td><%= @event.start_time.strftime('%H:%M') %></td>
          </tr>
          <tr>
            <td><%= link_to '戻る', events_path, class:"btn btn-dark" %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
