<div class="container">
  <div class"row">
    <div class="col-lg-8 mx-auto">
      <h2 class="mt-4">従業員名簿・追加</h2>
      <div>
        <%= form_with model:@worker, url:admin_workers_path, local:true do |f| %>
          <label for="name">従業員名</label>
          <%= f.text_field :name, placeholder: "名前を入れてください" %>
          <%= f.submit ' 登録 ', class:"btn btn-success" %>
        <% end %>
      </div>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th colspan="2">従業員</th>
          </tr>
        </thead>
        <tbody>
          <% @workers.each do |worker| %>
          <tr>
            <td>
              <%= worker.name %>
            </td>
            <td>
              <%= link_to '編集', edit_admin_worker_path(worker.id), class:"btn btn-warning" %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td><%= link_to :back do %><button class="btn btn-dark">戻る</button><% end %></td>
          <td></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>