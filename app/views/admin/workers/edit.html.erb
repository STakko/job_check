<div class="container">
  <div class"row">
    <div class="col-lg-8 mx-auto">
      <h2 class="mt-4">従業員名編集</h2>
      <div>
        <%= form_with model:@worker, url:admin_worker_path, method: :patch, local:true do |f| %>
          <label for="title">従業員名</label>
          <%= f.text_field :name %>
          <%= f.submit ' 変更を保存 ', class:"btn btn-success" %>
        <% end %>
      </div>
      <%= link_to "戻る", admin_workers_path, class:"btn btn-dark" %>
    </div>
  </div>
</div>