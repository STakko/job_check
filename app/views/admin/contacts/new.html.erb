<div class="container">
  <div class="row mx-auto">
    <div class="col-lg-6 mx-auto">
      <h2 class="mt-4">お問い合わせ</h2>
      <%= form_with model:@contact, url: admin_contacts_confirm_path, local: true do |f| %>
      <div class="contact-form">
        <%= f.label :name, 'お名前＊' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="contact-form">
        <%= f.label :email, 'email＊' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class="contact-form">
        <%= f.label :phone_number, '電話番号＊' %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <div class="contact-form">
        <%= f.label :title, 'タイトル＊' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="contact-form-messate">
        <%= f.label :message, 'お問い合わせ内容＊' %>
        <%= f.text_area :message, size: '10x10', class: 'form-control' %>
      </div>
      <div class="contact-button">
        <div class="contact-back"><%= link_to '戻る', admin_path, class:"btn btn-dark" %></div>
        <div class="contact-submit"><%= f.submit '入力内容確認', class:"btn btn-info" %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>