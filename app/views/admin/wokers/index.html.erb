<div>
  <h2>従業員名簿・追加</h2>
  <div>
    <%= form_with model:@woker, url:admin_wokers_path, local:true do |f| %>
      <label for="name">従業員名</label>
      <%= f.text_field :name, placeholder: "名前を入れてください" %>
      <%= f.submit ' 登録 ' %>
    <% end %>
  </div>
  <div>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th colspan="2">従業員</th>
          </tr>
        </thead>
        <tbody>
          <% @wokers.each do |woker| %>
          <tr>
            <td>
              <%= woker.name %>
            </td>
            <td>
              <%= link_to '編集する', edit_admin_woker_path(woker.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>