<div>
  <h2>作業記録編集</h2>
  <div>
    <%= form_with model:@record, url:admin_record_path(@record), local:true do |f| %>
      <label for="name">作業名</label>
      <%= f.text_field :name, placeholder: "作業名を入力" %>
      <label for="woker">作業者</label>
      <%= f.select :woker_id, options_from_collection_for_select(Woker.all, :id, :name) %>
      <label for="name">作業名</label>
      <%= f.select :client_id, options_from_collection_for_select(Client.all, :id, :name) %>
      <label for="body">作業内容</label>
      <%= f.text_field :body, placeholder: "作業内容を入力" %>

      <label for="image">写真</label>
      <%= f.attachment_field :image %>

      <% if @record.start_time != nil %>
      <label for="start_time">開始時刻</label>
      <%= f.datetime_select :start_time, {}, class: 'form-control' %>
      <% end %>

      <% if @record.finish_time != nil %>
        <label for="finish_time">終了時刻時刻</label>
        <%= f.datetime_select :finish_time, {}, class: 'form-control' %>
      <% end %>
      <%= f.submit ' 変更を保存 ' %>
    <% end %>
  </div>
</div>